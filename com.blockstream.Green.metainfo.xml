<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>com.blockstream.Green</id>
  
  <name>Blockstream Green</name>
  
  <summary>A simple and secure Bitcoin and Liquid Network wallet</summary>

  <developer_name>Blockstream</developer_name>

  <metadata_license>CC0-1.0</metadata_license>
  
  <project_license>GPL-3.0-only</project_license>
  
  <content_rating type="oars-1.0">
    <content_attribute id="social-info">moderate</content_attribute>
  </content_rating> 
  
  <supports>
    <control>pointing</control>
    <control>keyboard</control>
    <control>touch</control>
  </supports>
  
  <description>
    <p>
    Built by one of the most respected teams in the Bitcoin industry, Blockstream Green is supported across multiple platforms and is designed for Bitcoin beginners and power users alike.
    </p>
  </description>
  
  <launchable type="desktop-id">com.blockstream.Green.desktop</launchable>
  <url type="homepage">https://blockstream.com/green</url>
  <releases>
	  <release version="2.0.8" date="2024-7-11">
		  <description>
			<p>Added</p>
				<ul>
					<li>Flow to redeposit 2FA expired coins</li>
					<li>Notification for 2FA expired coins</li>
					<li>Notification for partial service outage</li>
					<li>Expose status of wallet connections</li>
					<li>Show banner for login alert</li>
					<li>Show banner for system messages</li>
					<li>Show banner for two factor expired outputs</li>
				</ul>
			<p>Changed</p>
				<ul>
					<li>Updates Qt to 6.7.2</li>
				</ul>
		  </description>
	  </release>
  </releases>

  <screenshots>
    <screenshot type="default">
      <image>https://blog.blockstream.com/content/images/size/w2000/2024/02/Green-2.0.png</image>
    </screenshot>
  </screenshots>
</component>
